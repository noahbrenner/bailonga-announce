include mixins/input.pug

doctype html
html(lang="en-us")
  head
    title Bailonga Templates
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="initial-scale=1")
  body
    h1 Bailonga Templates
    section
      h2 Enter values for this week's event
      form(autocomplete="off")
        +inputText('title')(spellcheck="true") Event Title
        label(for="date") Event Date
          input(
            data-bind="value: date"
            type="date"
            min="2015-01-06"
            step="7"
          )#date
        +inputTextarea('intro')(spellcheck="true") Organizer's intro
        +inputText('dj') DJ
        label(for="music-type") Music type
          select(
            data-bind="options: musicTypeOptions, value: musicType"
          )#music-type
        +inputText('teacherBeginner') Beginner lesson teacher
        label(for="topic-beginner") Beginner lesson topic
          select(
            data-bind="options: topicBeginnerOptions, value: topicBeginner"
          )#topic-beginner
        +inputText('teacherIntermediate') Intermediate lesson teacher
        +inputText('topicIntermediate') Intermediate lesson topic
        +inputText('cost') Cost
        fieldset
          legend Upcoming Events
          ul(data-bind="foreach: upcomingEvents")
            li
              label(data-bind="attr: {for: 'date' + $index()}") Date
                input(
                  data-bind="value: date, attr: {id: 'date' + $index()}"
                  type="date"
                  min="2015-01-06"
                  step="7"
                )
              +inputText('title', true)(spellcheck="true") Title
              button(data-bind="click: remove") Delete
          button(
            data-bind="click: addUpcomingEvent"
            type="button"
          ) Add upcoming event
    section
      h2 Copy the results below
      h3 Facebook Event
      textarea(
        data-bind="value: facebook"
        readonly
        spellcheck="false"
      )
