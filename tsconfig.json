{
  "compilerOptions": {
    "module": "commonjs",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [{
      "name": "typescript-tslint-plugin"
    }],
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "*",
    "src/**/*"
  ]
}
