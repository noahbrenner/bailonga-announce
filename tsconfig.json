{
  "compilerOptions": {
    "module": "commonjs", // Required for ts-node to execute webpack.*.ts
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [{
      "name": "typescript-tslint-plugin"
    }],
    "strict": true,
    "target": "ES6"
  },
  "include": [
    "*",
    "src/**/*"
  ]
}
