{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "max-line-length": [true, {
      "limit": 80,
      "ignore-pattern": "(//|[*]) https?://"
    }],
    "object-literal-sort-keys": [false],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "space-before-function-paren": [true, {
      "anonymous": "always",
      "asyncArrow": "always",
      "constructor": "never",
      "method": "never",
      "named": "never"
    }],
    "trailing-comma": [true, "never"]
  }
}
